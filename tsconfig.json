{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"baseUrl": "./",
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"~/*": ["./*"],
			"~app": ["app"],
			"~app/*": ["app/*"],
			"~components/": ["components/*"],
			"~components/*": ["components/*"],
			"~hooks": ["hooks"],
			"~hooks/*": ["hooks/*"],
			"~lib/": ["lib/"],
			"~lib/*": ["lib/*"],
			"~config/": ["config/"],
			"~config/*": ["config/*"],
			"~styles/": ["styles/"],
			"~styles/*": ["styles/*"],
			"~assets/": ["assets/"],
			"~assets/*": ["assets/*"]
		}
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts"
	],
	"exclude": ["node_modules"]
}
